<%- include('partials/header') -%>
<h1>Compose</h1>
<form action='/compose' method="post">
    <div class="form-group">
        <label for="titleText" class="form-label">Title</label>
        <input name="titleText" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label for="postText" class="form-label">Post</label>
        <textarea class="form-control" name="postText" rows="5"></textarea> 
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer') -%>